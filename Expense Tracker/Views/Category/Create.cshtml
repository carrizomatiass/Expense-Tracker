@model Expense_Tracker.Models.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <ejs-textbox id="title" placeholder="Title" value="Title" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="CategoryTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <ejs-textbox id="icon" placeholder="Icon" value="Icon" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="CategoryIcon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <ejs-textbox id="type" placeholder="Type" value="Type" floatLabelType="Auto"></ejs-textbox>
                <span asp-validation-for="CategoryType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
